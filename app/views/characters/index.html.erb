<h1>Listing characters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Strength</th>
    <th>Skill</th>
    <th>Resistance</th>
    <th>Armor</th>
    <th>Fire power</th>
    <th>Health points</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= character.name %></td>
    <td><%= character.strength %></td>
    <td><%= character.skill %></td>
    <td><%= character.resistance %></td>
    <td><%= character.armor %></td>
    <td><%= character.fire_power %></td>
    <td><%= character.health_points %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

